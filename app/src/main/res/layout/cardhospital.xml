                android:layout_marginEnd="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginBottom="130dp"
                android:text="descricao" />

            <TextView
                android:id="@+id/txtDistrict"
                android:layout_width="match_parent"
